<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
        <% for(var i=0;i<newItem.length;i++){ %>
            <div class="item">
                <input type="checkbox" name="" id="">
                <p><%= newItem[i] %></p>
            </div>
                    
        <%  } %>
        <form class="item" action="/" method="post">
            <input type="text" name="todoitem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= kindOfDay %>>+</button>
        </form>
    </div>

    <%- include("footer") -%>